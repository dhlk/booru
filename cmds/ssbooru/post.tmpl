<!DOCTYPE html>
<html>
	<head>
		<title>{{.Base.Title}} | post | {{.Post.Tags}}</title>
{{template "styles.tmpl" .Base}}
	</head>
	<body>
		<header>
			<a href="/">{{.Base.Title}}</a> | post | {{.Post.ID}} | {{.Post.Post}}
		</header>
		<nav>
			<form method="get" action="/search">
				<label>
					Search:
					<input type="text" name="query">
				</label>
			</form>
{{if ne .Post.ID 0}}
			Tags:<br>
{{range .Post.Tags}}			<div class="left">
				<a href="/search?query={{.Tag}}">{{.Tag}}</a>
			</div>
			<br>
{{end}}
{{end}}
		</nav>
		<p>{{.Post.Time}}</p>
{{if ne .Post.ID 0}}		<a href="/resource/{{.Post.Post}}">
			<embed src="/resource/{{.Post.Post}}">
		</a>
{{end}}
	</body>
</html>
